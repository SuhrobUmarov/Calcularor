<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.calculator.CalculatorController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="5" vgap="5">
    <TextField fx:id="display" GridPane.columnSpan="4" />
    <Button text="7" onAction="#handleDigitButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Button text="8" onAction="#handleDigitButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button text="9" onAction="#handleDigitButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Button text="/" onAction="#handleOperatorButtonAction" GridPane.columnIndex="3" GridPane.rowIndex="1" />
    <Button text="4" onAction="#handleDigitButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button text="5" onAction="#handleDigitButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button text="6" onAction="#handleDigitButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Button text="*" onAction="#handleOperatorButtonAction" GridPane.columnIndex="3" GridPane.rowIndex="2" />
    <Button text="1" onAction="#handleDigitButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button text="2" onAction="#handleDigitButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button text="3" onAction="#handleDigitButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Button text="-" onAction="#handleOperatorButtonAction" GridPane.columnIndex="3" GridPane.rowIndex="3" />
    <Button text="0" onAction="#handleDigitButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" />
    <Button text="." onAction="#handleDigitButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="4" />
    <Button text="+" onAction="#handleOperatorButtonAction" GridPane.columnIndex="3" GridPane.rowIndex="4" />
    <Button text="=" onAction="#handleEqualsButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="4" />
    <Button text="C" onAction="#handleClearButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="4" />
</GridPane>
